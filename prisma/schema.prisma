enum BiomedicalEntityType {
    // indication
    CONDITION
    DISEASE
    PHENOTYPE

    // intervention
    BEHAVIORAL
    BIOLOGIC
    CLASS
    COMBINATION
    COMPOUND
    DEVICE
    DIAGNOSTIC
    DIETARY
    DOSAGE_FORM
    MECHANISM
    PROCEDURE
    PROCESS
    RESEARCH
    ROA

    // group intervention
    PHARMACOLOGICAL

    // both
    PATHWAY
    TARGET

    // other
    OTHER
